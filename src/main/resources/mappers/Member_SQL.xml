<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace를 통해 Query ID 매핑 -->
<mapper namespace="member">

	<!-- Member 테이블 프로퍼티, 컬럼 결과 매핑 -->
	<resultMap id="memberResultMap" 	type="MemberVO">
		<id 	property="idx" 			column="idx" />
		<result property="memberId" 	column="member_id" />
		<result property="memberPw" 	column="member_pw" />
		<result property="memberName" 	column="member_name" />
		<result property="memberPhone" 	column="member_phone" />
		<result property="status" 		column="status" />
		<result property="insertTime" 	column="insert_time" />
		<result property="updateTime" 	column="update_time" />
	</resultMap>

	<!-- Member 테이블 컬럼 리스트 -->
	<sql id="memberColumns">
		  idx
		, member_id
		, member_pw
		, member_name
		, member_phone
		, status
		, insert_time
		, update_time
	</sql>

	<!-- 회원 등록 -->
	<!-- 오라클과 같이 auto_increment 기능이 없는 경우엔, selectKey 구문을 사용해야 함 -->
	<insert id="insertMember" parameterType="MemberVO" useGeneratedKeys="true" keyProperty="idx">
		<selectKey keyProperty="idx" resultType="integer" order="BEFORE">
			SELECT 
			    CASE COUNT(next_seq)
			        WHEN 0 THEN 1
			        ELSE MAX(next_seq) + 1
			    END AS next_seq
			FROM
			    sequence
			WHERE
			    table_name = 'member'
		</selectKey>
		INSERT INTO member (
			<include refid="memberColumns" />
		) VALUES (
			  #{idx}
			, #{memberId}
			, #{memberPw}
			, #{memberName}
			, #{memberPhone}
			, 'N'
			, NOW()
			, NULL
		)
	</insert>

	<!-- 회원 상세 정보 조회 -->
	<select id="selectMemberDetail" parameterType="string" resultMap="memberResultMap">
		SELECT
			<include refid="memberColumns" />
		FROM
			member
		WHERE
			member_id = #{memberId}
	</select>

	<!-- 회원 정보 수정 -->
	<update id="updateMember" parameterType="MemberVO">
		UPDATE member
		SET
			<if test="!@com.dy.common.utils.MyBatisUtils@isEmpty(memberPw)">member_pw = #{memberPw}</if>
		  ,	<if test="!@com.dy.common.utils.MyBatisUtils@isEmpty(memberName)">member_name = #{memberName}</if>
		  ,	<if test="!@com.dy.common.utils.MyBatisUtils@isEmpty(memberPhone)">member_phone = #{memberPhone}</if>
		  , update_time = NOW()
		WHERE
			member_id = #{memberId}
	</update>

	<!-- 회원 정보 삭제 (사용 여부 변경) -->
	<update id="deleteMember" parameterType="string">
		UPDATE member
		SET
			status = 'N'
		WHERE
			member_id = #{memberId}
	</update>

	<!-- 회원 리스트 조회 -->
	<select id="selectMemberList" parameterType="MemberVO" resultMap="memberResultMap">
		SELECT
			<include refid="memberColumns" />
		FROM
			member
		WHERE
			status = 'Y'
		ORDER BY
			idx DESC,
			insert_time DESC
	</select>

	<!-- 전체 회원수 조회 -->
	<select id="selectTotalCount" parameterType="MemberVO" resultType="int">
		SELECT
			COUNT(*)
		FROM
			member
		WHERE
			status = 'Y'
	</select>

</mapper>
