<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace를 통해 Query ID 매핑 -->
<mapper namespace="board">

	<!-- Board 테이블 프로퍼티, 컬럼 결과 매핑 -->
	<resultMap id="boardResultMap" 		type="BoardVO">
		<id 	property="idx" 			column="idx" />
		<result property="title" 		column="title" />
		<result property="content" 		column="content" />
		<result property="writer" 		column="writer" />
		<result property="useYn" 		column="use_yn" />
		<result property="noticeYn" 	column="notice_yn" />
		<result property="secretYn" 	column="secret_yn" />
		<result property="insertTime" 	column="insert_time" />
		<result property="updateTime" 	column="update_time" />
		<result property="viewCnt" 		column="view_cnt" />
	</resultMap>

	<!-- Board 테이블 컬럼 리스트 -->
	<sql id="boardColumns">
		  idx
		, title
		, content
		, writer
		, use_yn
		, notice_yn
		, secret_yn
		, insert_time
		, update_time
		, view_cnt
	</sql>

	<!-- 게시글 등록 -->
	<!-- 오라클과 같이 auto_increment 기능이 없는 경우엔, selectKey 구문을 사용해야 함 -->
	<insert id="insertBoard" parameterType="BoardVO" useGeneratedKeys="true" keyProperty="idx">
		INSERT INTO board (
			<include refid="boardColumns" />
		) VALUES (
			  #{idx}
			, #{title}
			, #{content}
			, #{writer}
			, 'Y'
			, #{noticeYn}
			, #{secretYn}
			, NOW()
			, NULL
			, 0
		)
	</insert>

	<!-- 게시글 상세 조회 -->
	<select id="selectBoardDetail" parameterType="integer" resultMap="boardResultMap">
		SELECT
			<include refid="boardColumns" />
		FROM
			board
		WHERE
			use_yn = 'Y'
		AND
			idx = #{idx}
	</select>

	<!-- 게시글 수정 -->
	<update id="updateBoard" parameterType="BoardVO">
		UPDATE board
		SET
			title = #{title}
		  , content = #{content}
		  , notice_yn = #{noticeYn}
		  , secret_yn = #{secretYn}
		  , update_time = NOW()
		WHERE
			idx = #{idx}
	</update>

	<!-- 게시글 삭제 (사용 여부 변경) -->
	<update id="deleteBoard" parameterType="integer">
		UPDATE board
		SET
			use_yn = 'N'
		WHERE
			idx = #{idx}
	</update>

	<!-- 게시글 리스트 조회 -->
	<select id="selectBoardList" parameterType="BoardVO" resultMap="boardResultMap">
		SELECT
			<include refid="boardColumns" />
		FROM
			board
		WHERE
			use_yn = 'Y'
		ORDER BY
			idx DESC,
			insert_time DESC
	</select>

	<!-- 게시글 전체 개수 조회 -->
	<select id="selectTotalCount" parameterType="BoardVO" resultType="int">
		SELECT
			COUNT(*)
		FROM
			board
		WHERE
			use_yn = 'Y'
	</select>

</mapper>
